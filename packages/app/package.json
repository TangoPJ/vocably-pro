{
  "name": "@vocably/app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "echo 'Use `npm run integration` to test @vocably/app.'",
    "integration": "ng test",
    "app": "npm start",
    "watch-prod": "ng build --watch --configuration production",
    "serve": "http-server -p 8030 -c-1 dist -P http://localhost:8030?",
    "pwa": "npm-run-all --parallel watch-prod serve"
  },
  "dependencies": {
    "@ionic/angular": "^6.1.9",
    "pulltorefreshjs": "^0.1.22"
  },
  "devDependencies": {
    "@types/pulltorefreshjs": "^0.1.5"
  }
}
