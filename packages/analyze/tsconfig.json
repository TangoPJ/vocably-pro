{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/index.ts", "src/jest.d.ts"],
  "exclude": ["node_modules"]
}
