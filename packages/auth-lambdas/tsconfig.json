{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
